extends ../layout/common

block content

    h1 Login

    if errors   
        each error in errors
            .alert.alert-danger= error

    form(method="POST")
        .form-group
        label(for="email") Email
        input#email.form-control(type='search', placeholder='Email', name="email", value=values ? values.email : '')

        label.mt-2(for="password") Password
        input#password.form-control(type='password', placeholder='Password', name="password", value=values ? values.password : '')

        button.btn.btn-outline-success.mt-2(type='submit') Login