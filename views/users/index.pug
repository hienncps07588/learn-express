extends ../layout/common

block content

    h1
        span.mr-2 Users
        span &nbsp;
        a.btn.btn-outline-success(href="/users/create") Add New
    .d-flex
        form.ml-auto.form-inline.my-2.my-lg-0(action="/users/search", method="GET")
            input.form-control.mr-sm-2(type='search', placeholder='Search', name="q")
            button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search

    table.mt-3.table
        tr
            th Name
            th Phone
            th Action
            th

        each user in users
            tr
                td= user.name
                td= user.phone
                td
                    a.btn.btn-outline-secondary(href='/users/' + user.id) View 
                td
                    a.btn.btn-outline-secondary(href='/users', user.id) Delete    


    
